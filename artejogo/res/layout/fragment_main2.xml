<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#add8e6"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.artejogo.MainActivity$PlaceholderFragment" >

    <ImageButton
        
        android:id="@+id/arte2"
        android:layout_width="182dp"
        android:layout_height="160dp"
      
        android:gravity="center"
        android:src="@drawable/arte2" />

    <ImageButton
        android:id="@+id/paint2"
        android:layout_width="194dp"
        android:layout_height="212dp"
        android:layout_alignLeft="@+id/arte2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:gravity="center"
        android:src="@drawable/paint2" />

    <TextView
        android:id="@+id/textoarte2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/arte2"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/paint2"
        android:gravity="right"
        android:text="Suprematist Composition \n vendido por \n 60 milhoes de dolares"
        android:visibility="invisible"
         />

         <Button
             android:id="@+id/proximo2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/textopaint2"
             android:layout_alignRight="@+id/textopaint2"
             android:background="#ff0000"
             android:gravity="center"
             android:text="@string/proximo"
             android:textAlignment="center"
             android:textColor="#ffffff"
             android:visibility="invisible"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/textopaint2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/textoarte2"
             android:layout_alignTop="@+id/paint2"
             android:layout_marginTop="72dp"
             android:gravity="right"
             android:text="Algo que nao \nvale 60 milhoes \n de dolares" 
             android:visibility="invisible"/>

/>

</RelativeLayout>