<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#add8e6"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.artejogo.MainActivity$PlaceholderFragment" >

    <ImageButton
        
        android:id="@+id/arte1"
        android:layout_width="182dp"
        android:layout_height="160dp"
      
        android:gravity="center"
        android:src="@drawable/arte1" />

    <ImageButton
        android:id="@+id/paint1"
        android:layout_width="194dp"
        android:layout_height="212dp"
        android:layout_alignLeft="@+id/arte1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:gravity="center"
        android:src="@drawable/paint1" />

    <TextView
        android:id="@+id/textoarte1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/arte1"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/paint1"
        android:gravity="right"
        android:text="OnementIV \r\n vendido por \r\n 44 milhoes de dolares"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textopaint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textoarte1"
        android:layout_alignTop="@+id/paint1"
        android:layout_marginTop="53dp"
        android:gravity="right"
        android:text="Obra de arte que \r\n acabei de fazer \r\n no paint"
        android:visibility="invisible" />

         <Button
             android:id="@+id/proximo1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/textopaint1"
             android:layout_alignRight="@+id/textopaint1"
             android:background="#ff0000"
             android:gravity="center"
             android:text="@string/proximo"
             android:textAlignment="center"
             android:textColor="#ffffff"
             android:visibility="invisible"
             android:textStyle="bold" />

/>

</RelativeLayout>